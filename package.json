{
  "name": "fireferret",
  "version": "0.3.0",
  "description": "Asynchronous MongoDB document query and caching client for Node.js",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/*"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "test": "npm run lint && jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "jsdoc": "jsdoc ./lib/* -d ./docs",
    "lint": "echo \"Running Lint...\" && standard ./lib/*.js --verbose && echo \"Lint Successful!\"",
    "lint-fix": "echo \"Using \"standard --fix\"\" && standard --fix && echo \"All fixed up!\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mster/fireferret.git"
  },
  "author": "Michael Sterpka <michaelsterpka@gmail.com> (https://github.com/mster)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mster/fireferret/issues"
  },
  "homepage": "https://github.com/mster/fireferret#readme",
  "jest": {
    "testRegex": "./tests/.*.js$"
  },
  "dependencies": {
    "matflap": "0.0.0",
    "mongodb": "^3.5.9",
    "pump": "^3.0.0",
    "redis": "^3.0.2",
    "sliced": "^1.0.1",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "jest": "^26.4.2",
    "jsdoc": "^3.6.5",
    "standard": "^14.3.4"
  }
}
